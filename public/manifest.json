{
    "manifest_version": 2,

    "name": "Omegle Spy",
    "description": "This extension allows you to spy on Omegle chats",
    "version": "1.6",
    "content_security_policy": "script-src 'self' https://www.google-analytics.com/analytics.js; object-src 'self'",

    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "activeTab",
        "http://*.omegle.com/"
    ]
}
